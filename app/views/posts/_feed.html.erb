
<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <% if user_signed_in? %>
            <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.username) %>
          <% else %>
            <img src="https://bulma.io/images/placeholders/64x64.png">
          <% end %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p class="title is-4"><%= link_to post.title, post %></p>
          <p class="subtitle">
            <% if user_signed_in? %>
              <strong><%= current_user.username %></strong><br />
            <% else %>
              <strong>Anonymous User</strong><br />
            <% end %>
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
          <% if user_signed_in? %>
            <%= link_to post, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_post_path(post), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to post, method: :delete,
                              class: "level-item",
                              data: { confirm: "Are you sure you want to delete this post?" } do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>