<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post,
          label: "Post something",
          input_html: { class: "textarea" },
          wrapper: false,
          label_html: { class: "label" },
          placeholder: "I wish I was an Oscar Meyer weiner",
          autofocus: true
    %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>