<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <div class="box">
          <article class="media">  <!-- Post column -->
            <div class="media-left">
              <figure class="image is-64x64">
                <% if user_signed_in? %>
                  <%= gravatar_image_tag(@post.user.email, size: 64, alt: @post.user.username) %>
                <% else %>
                  <img src="https://bulma.io/images/placeholders/64x64.png">
                <% end %>
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p class="title is-4"><%= @post.title %>
                  <% if user_signed_in? && current_user == @post.user %>
                    <%= link_to @post, method: :delete,
                                      class: "is-size-5",
                                      data: { confirm: "Are you sure you want to delete this post?" } do %>
                      <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
                  <% end %>
                </p>
                <p class="subtitle">
                  <% if user_signed_in? %>
                    <strong><%= @post.user.username %></strong><br />
                  <% else %>
                    <strong>Anonymous User</strong><br />
                  <% end %>
                </p>
                <p>
                  <%= @post.body %>
                </p>
              </div>
              
            </div>
          </article>
        </div>
      </div>
      <div class="column is-narrow"> <!-- Profile widget column -->
        <% if user_signed_in? %>
          <%= render 'profile' %>
        <% else %>
          <div class="box has-text-centered" id="no-user">
            <div class="level">
              <div class="level-left is-mobile">
                <p>
                  <%= link_to "Sign In", new_user_session_path, class: "button is-dark" %>
                </p>
                <p>
                  <%= link_to "Register", new_user_registration_path, class: "button is-grey-light" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>